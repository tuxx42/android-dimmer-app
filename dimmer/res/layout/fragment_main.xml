<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dimmer.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Switch
            android:id="@+id/ButtonToggle0"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="toggleChannel" />

        <Button
            android:id="@+id/ButtonBright0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="increaseBrightness"
            android:text="Brighter" />

        <Button
            android:id="@+id/ButtonDimm0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="decreaseBrightness"
            android:text="Dimmer" />

        <SeekBar
            android:id="@+id/SeekBar0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Switch
            android:id="@+id/ButtonToggle1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="toggleChannel" />

        <Button
            android:id="@+id/ButtonBright1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="increaseBrightness"
            android:text="Brighter" />

        <Button
            android:id="@+id/ButtonDimm1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="decreaseBrightness"
            android:text="Dimmer" />

        <SeekBar
            android:id="@+id/DimmBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Switch
            android:id="@+id/ButtonToggle2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="toggleChannel" />

        <Button
            android:id="@+id/ButtonBright2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="increaseBrightness"
            android:text="Brighter" />

        <Button
            android:id="@+id/ButtonDimm2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="decreaseBrightness"
            android:text="Dimmer" />

        <SeekBar
            android:id="@+id/DimmBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Switch
            android:id="@+id/ButtonToggle3"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="toggleChannel" />

        <Button
            android:id="@+id/ButtonBright3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="increaseBrightness"
            android:text="Brighter" />

        <Button
            android:id="@+id/ButtonDimm3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:onClick="decreaseBrightness"
            android:text="Dimmer" />

        <SeekBar
            android:id="@+id/DimmBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <Button
            android:id="@+id/ButtonAllOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchAll"
            android:text="All On" />

        <Button
            android:id="@+id/ButtonAllOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchAll"
            android:text="All Off" />
    </LinearLayout>

</LinearLayout>